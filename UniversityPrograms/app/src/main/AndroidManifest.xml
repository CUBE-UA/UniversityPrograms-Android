<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="up.ua.edu.universityprograms">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".EventActivity"
            android:label="@string/title_activity_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EventListActivity"
            android:label="@string/title_activity_event_list"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"/>
        <activity android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"/>
        <activity android:name=".SuggestEventActivity"
            android:label="@string/title_activity_suggest_event"/>
        <activity android:name=".FeedbackActivity"
            android:label="@string/title_activity_feedback"/>
        <activity android:name=".DirectoryActivity"
            android:label="@string/title_activity_directory"></activity>
    </application>

</manifest>
